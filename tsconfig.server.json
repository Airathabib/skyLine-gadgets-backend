{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs", // ← или "esnext", "nodenext"
    "moduleResolution": "node",
    "target": "es2022",
    "outDir": "./dist/server",
    "rootDir": "./server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
