{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
